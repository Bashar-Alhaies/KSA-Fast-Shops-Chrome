{
  "manifest_version": 2,
  "name": "KSA Fast Shops",
  "version": "1.0.1",
  "icons":{
    "16": "Images/icon_16x16.png",
    "48": "Images/icon_48x48.png",
    "128": "Images/icon_128x128.png"
  },
  "description": "Select text and search fast in Saudi Arabi online shopes",
  "content_scripts": [ {
    "matches": ["http://*/*", "https://*/*","http://*/foo*", "https://*.google.com/foo*bar"],
    "js": ["content.js", "popup.js"]
  }],
  "background":{
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "KSA Fast Shopes",
    "css": "style/style.css"
  },
  "web_accessible_resources":[
    "Images/*.svg",
    "popup.js",
    "style/style.css"
  ]
}